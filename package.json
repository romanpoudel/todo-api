		"@types/jsonwebtoken": "^9.0.5",
		"@types/node": "^20.10.5",
		"@types/to-snake-case": "^1.0.2",
		"@types/typescript": "^2.0.0",
		"nodemon": "^3.0.2",
		"prettier": "^3.1.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
